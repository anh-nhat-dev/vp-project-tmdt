<%- include("layout/header")%>

    <!--	List Product	-->
    <div class="products">
        <div id="search-result">Kết quả tìm kiếm với sản phẩm <span><%=keyWord%></span></div>
      
       
       <div class="product-list card-deck">
            <% products && products.length && products.forEach((product, index) => { %>
                <div class="product-item card text-center">
                    <a href="/product/<%=product.id%>"><img src="/static/images/products/<%=product.prd_image%>"/></a>
                    <h4><a href="/product/<%=product.id%>"><%=product.prd_name%></a></h4>
                    <p>Giá Bán: <span><%=product.prd_price%>đ</span></p>
                </div>
                <% }) %>
        </div>
    </div>
    <!--	End List Product	-->

    <div id="pagination">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Trang trước</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Trang sau</a></li>
        </ul>
    </div>

</div>

<%- include ("layout/footer")%>